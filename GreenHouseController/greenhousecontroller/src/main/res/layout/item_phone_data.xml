<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.klnvch.greenhousecontroller.models.PhoneData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/log_time"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@{item.timeForLogs}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="01-02 03:04" />

        <TextView
            android:id="@+id/chargingState"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="@{item.isCharging}"
            app:layout_constraintStart_toEndOf="@+id/log_time"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="true" />

        <TextView
            android:id="@+id/batteryLevel"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="@{item.batteryLevel}"
            app:layout_constraintStart_toEndOf="@+id/chargingState"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="100" />

        <TextView
            android:id="@+id/networkStrength"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="@{item.networkStrength}"
            app:layout_constraintStart_toEndOf="@+id/batteryLevel"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="-91" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
